#post_content
	%h1= @post.title
	%p= @post.content

	#comments
		%h2
			= @post.comments.count
			Comments
		= render @post.comments
		
		- if user_signed_in?
			%h3 Reply To Thread
			= render "comments/form"
		
			%br/
			%hr/
			%br/
	
			.buttons
				= link_to "Edit Post", edit_post_path(@post), class: "button"
				= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do delete Post?" , class: "button" }
			%br/
			%br/

		